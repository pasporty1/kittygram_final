version: '3'

volumes:
  kitty_pg_data:
  static:

services:
  kitty_db:
    image: postgres:13
    volumes:
      - kitty_pg_data:/var/lib/postgresql/data
  kitty_backend:
    build: ./backend/
    env_file: .env
  frontend:
    env_file: .env
    build: ./frontend/
    command: cp -r /app/build/. /static/
    volumes:
      - static:/static
  gateway:
    build: ./nginx/
    env_file: .env
    ports:
      - 9000:80
    volumes:
      - static:/static
